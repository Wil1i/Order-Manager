<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <%- include("./templates/head.ejs", {css : "singleUser.css"}) %>
</head>
<body>
    <%- include("./templates/sideBar.ejs", {active : "0"}) %>
    <%- include("./templates/flash.ejs") %>

    <div>
        <div class="user-container">
            <div class="user-right">
                <h1 class="user-name"><%= findUser.username %></h1>
                <% if(edit){ %>
                    <form action="/users/<%=findUser.id%>?action=edit" method="post" class="user-info-container">
                <% }else{ %>
                    <div class="user-info-container">
                <% } %>
                    <div class="user-info">
                        <p><b>مقام</b>: <%= findUser.rank %></p>
                    </div>
                    <% if(edit){ %>

                    <div class="user-info">
                        <input type="text" name="username" dir="ltr" placeholder="نام کاربری">
                        <input type="password" name="password" dir="ltr" placeholder="کلمه عبور">
                        <input type="password" name="repeatPassword" dir="ltr" placeholder="تکرار کلمه عبور">
                        <select name="rank" id="priceStatus" required>
                            <option value="اشتباه" disabled selected hidden>مقام</option>
                            <option value="user">user</option>
                            <option value="admin">admin</option>
                        </select>
                    </div>

                    <% } %>

                    <div class="user-info">
                        <% if(edit){ %>
                            <button type="submit">ذخیره</button>
                        <% }else{ %>
                            <p><a href="/users/<%= findUser.id %>?action=edit">ویرایش</a></p>
                        <% } %>
                        <p class="btn-delete"><a href="/users/<%= findUser.id %>?action=delete">حذف</a></p>
                    </div>
                <% if(edit){ %>
                    </form>
                <% }else{ %>
                    </div>
                <% } %>
            </div>
            <div class="user-left">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="user-profile">
                    <path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 1 1 9 0 4.5 4.5 0 0 1-9 0ZM3.751 20.105a8.25 8.25 0 0 1 16.498 0 .75.75 0 0 1-.437.695A18.683 18.683 0 0 1 12 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 0 1-.437-.695Z" clip-rule="evenodd" />
                </svg>
                <div>
                    <p class="user-author">
                        <%= findUser.createdBy %>
                        
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                            <path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 1 1 9 0 4.5 4.5 0 0 1-9 0ZM3.751 20.105a8.25 8.25 0 0 1 16.498 0 .75.75 0 0 1-.437.695A18.683 18.683 0 0 1 12 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 0 1-.437-.695Z" clip-rule="evenodd" />
                        </svg>
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>